{
  "name":         "plhw/hf-api-client",
  "description":  "PLHW API Client provides means to authenticate clients against with OAuth2 server and issue authorized requests to our api endpoints",
  "type":         "library",
  "license":      "proprietary",
  "authors":      [
    {
      "name":  "Bas Kamer",
      "email": "baskamer@gmail.com"
    }
  ],
  "config":       {
    "optimize-autoloader": true,
    "sort-packages":       true
  },
  "require":      {
    "php": "^7.0",
    "beberlei/assert": "^2.7",
    "league/oauth2-client": "^2.2",
    "roave/security-advisories": "dev-master",
    "zendframework/zend-cache": "^2.7",
    "zendframework/zend-serializer": "^2.8",
    "zendframework/zendservice-api": "dev-master"
  },
  "require-dev":  {
    "malukenho/docheader": "^0.1.5",
    "plhw/hf-cs-fixer-config": "^1.0"
  },
  "autoload":     {
    "psr-4": {
      "HF\\ApiClient\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "HFTest\\ApiClient\\": "tests/src/"
    }
  },
  "scripts" : {
    "cs": "php-cs-fixer fix -v --diff --dry-run && docheader check src",
    "cs-fix": "php-cs-fixer fix -v --diff",
    "test-postgres": "vendor/bin/phpunit -c phpunit.xml.pdo_pgsql"
  }
}
